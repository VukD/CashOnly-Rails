<div id="cash-request-page" class="page">
    <div id="accordion" class="accordion">
        
            <div class="link">
                <div id="text">
                  <%= image_tag "logo.svg", alt: "logo", :id => "logo"%>
                  <h1 id="title">CashOnly</h1>
                </div>
                <i class="fa fa-chevron-down"></i>
            </div>
            <div class="submenu">
              <button type="submit" id="stop-location-tracking">Stop Location Tracking</button>
              <div id="logout" >Log out</div>
          </div>
        
    </div>
    <div id="inner-wrap">		
        <div id="recipient-photo">
            <%= image_tag "Erin.jpg", alt: "recipient-photo", :id => "recipient-photo" %>
            <div id="give-cash-wrapper"><h2 id="give-cash-title">Erin can get you cash!</h2></div>
        </div>
		<% if !session[:access_token].nil? %>
		    <div id="wrapper">
				<div id="dollar">$</div>
		    	<form action="/venmo" method="post" id="venmo-form">
		    		<% puts session[:access_token] %>
		        	<input  type="text" id="money" name="money" class="text-box" >
		        	<button type="submit" id="request-cash" class="need_request" >Request</button>
			    </form>
		    </div>

	    <% else %>
	    	<button type="submit" id="gave-cash-btn" onclick="location.href='https://api.venmo.com/v1/oauth/authorize?client_id=2877&scope=make_payments&response_type=code'">Log in with Venmo!
			</button>
	    	
		<% end %>
    </div>
    <button type="submit" id="cancel-give-btn" onclick="location.href='/account'">Cancel</button>
</div>
